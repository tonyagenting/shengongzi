{
  "kind": "collectionType",
  "collectionName": "learning_items",
  "info": {
    "singularName": "learning-item",
    "pluralName": "learning-items",
    "displayName": "LearningItem"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Animals",
        "Space",
        "Nature",
        "Daily Life",
        "Colours",
        "Food"
      ]
    },
    "difficulty_level": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "media_assets": {
      "type": "component",
      "component": "game.interactive-media",
      "repeatable": false
    },
    "hanzi_details": {
      "type": "component",
      "component": "game.hanzi-meta",
      "repeatable": true
    },
    "simple_description": {
      "type": "text"
    },
    "fun_fact": {
      "type": "text"
    },
    "unlock_points": {
      "type": "integer"
    }
  }
}
